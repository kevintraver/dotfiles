[
  // Menu commands

  {
    "key": "cmd+o",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "cmd+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "shift+cmd+o",
    "command": "projectManager.listProjects"
  },

  // Editor

  {
    "key": "cmd+d",
    "command": "workbench.action.splitEditor",
    "when": "editorTextFocus"
  },

  // Navigation

  {
    "key": "cmd+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "cmd+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "neovim.mode != insert"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "neovim.mode != insert"
  },

  // Neovim Navigation

  {
    "command": "vscode-neovim.send",
    "key": "alt+h",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<A-h>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "alt+j",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<A-j>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "alt+k",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<A-k>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "alt+l",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<A-l>"
  },

  // ctrl-p and ctrl-n for next/previous

  {
    "key": "ctrl+n",
    "command": "-cursorDown",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+p",
    "command": "-cursorUp",
    "when": "textInputFocus"
  },
  {
    "command": "vscode-neovim.send",
    "key": "ctrl+p",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<C-p>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "ctrl+n",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<C-n>"
  },

  // git

  {
    "key": "shift+cmd+g",
    "command": "workbench.scm.focus"
  },
  {
    "key": "shift+cmd+d",
    "command": "git.openAllChanges"
  },
  {
    "key": "alt+c",
    "command": "git.commit"
  },
  {
    "key": "alt+s",
    "command": "git.stage"
  },
  {
    "key": "alt+u",
    "command": "git.unstage"
  },
  {
    "key": "alt+r",
    "command": "git.revertSelectedRanges",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+r",
    "command": "git.clean",
    "when": "!editorFocus"
  },

  // git change navigation

  {
    "key": "alt+[",
    "command": "workbench.action.editor.nextChange",
    "when": "editorTextFocus && !textCompareEditorActive"
  },
  {
    "key": "alt+]",
    "command": "workbench.action.editor.previousChange",
    "when": "editorTextFocus && !textCompareEditorActive"
  },

  // rest-client keymaps

  {
    "key": "cmd+enter",
    "command": "rest-client.request",
    "when": "editorTextFocus && editorLangId == 'http'"
  },
  {
    "key": "cmd+enter",
    "command": "rest-client.request",
    "when": "editorTextFocus && editorLangId == 'graphql'"
  },
  {
    "command": "vscode-neovim.send",
    "key": "alt+.",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<A-.>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "alt+,",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<A-,>"
  },
  {
    "key": "ctrl+space",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus",
    "args": "<C-Space>"
  },
  {
    "key": "shift+space",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus",
    "args": "<S-Space>"
  }
]
