[
  // -------------------------
  // Menu commands
  // -------------------------
  { "key": "cmd+o", "command": "workbench.action.quickOpen" },
  { "key": "cmd+p", "command": "workbench.action.showCommands" },
  { "key": "shift+cmd+o", "command": "projectManager.listProjects" },

  // -------------------------
  // Editor commands
  // -------------------------
  {
    "key": "cmd+d",
    "command": "workbench.action.splitEditor",
    "when": "editorTextFocus"
  },

  // -------------------------
  // Navigation
  // -------------------------
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "neovim.mode != insert"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "neovim.mode != insert"
  },

  // -------------------------
  // Neovim-specific navigation
  // -------------------------
  {
    "key": "alt+h",
    "command": "vscode-neovim.send",
    "args": "<A-h>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "alt+j",
    "command": "vscode-neovim.send",
    "args": "<A-j>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "alt+k",
    "command": "vscode-neovim.send",
    "args": "<A-k>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "alt+l",
    "command": "vscode-neovim.send",
    "args": "<A-l>",
    "when": "editorTextFocus && neovim.mode != insert"
  },

  // -------------------------
  // ctrl-p and ctrl-n for next/previous
  // -------------------------
  { "key": "ctrl+p", "command": "-cursorUp", "when": "textInputFocus" },
  { "key": "ctrl+n", "command": "-cursorDown", "when": "textInputFocus" },
  {
    "key": "ctrl+p",
    "command": "vscode-neovim.send",
    "args": "<C-p>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "ctrl+n",
    "command": "vscode-neovim.send",
    "args": "<C-n>",
    "when": "editorTextFocus && neovim.mode != insert"
  },

  // -------------------------
  // Git-related commands
  // -------------------------
  { "key": "shift+cmd+g", "command": "workbench.scm.focus" },
  { "key": "shift+cmd+d", "command": "git.openAllChanges" },
  { "key": "alt+c", "command": "git.commit" },
  { "key": "alt+s", "command": "git.stage" },
  { "key": "alt+u", "command": "git.unstage" },
  {
    "key": "alt+r",
    "command": "git.revertSelectedRanges",
    "when": "editorTextFocus"
  },
  { "key": "alt+r", "command": "git.clean", "when": "!editorFocus" },

  // -------------------------
  // Git change navigation
  // -------------------------
  {
    "key": "alt+[",
    "command": "workbench.action.editor.nextChange",
    "when": "editorTextFocus && !textCompareEditorActive"
  },
  {
    "key": "alt+]",
    "command": "workbench.action.editor.previousChange",
    "when": "editorTextFocus && !textCompareEditorActive"
  },

  // -------------------------
  // rest-client keymaps
  // -------------------------
  {
    "key": "cmd+enter",
    "command": "rest-client.request",
    "when": "editorTextFocus && (editorLangId == 'http' || editorLangId == 'graphql')"
  },

  // -----------------------------
  // Miscellaneous Neovim mappings
  // -----------------------------
  {
    "key": "alt+.",
    "command": "vscode-neovim.send",
    "args": "<A-.>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "alt+,",
    "command": "vscode-neovim.send",
    "args": "<A-,>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "ctrl+space",
    "command": "vscode-neovim.send",
    "args": "<C-Space>",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+space",
    "command": "vscode-neovim.send",
    "args": "<S-Space>",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+]",
    "command": "editor.action.marker.next",
    "when": "editorFocus"
  },
  {
    "key": "cmd+[",
    "command": "editor.action.marker.prev",
    "when": "editorFocus"
  },
  {
    "key": "cmd+h",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  }
]
