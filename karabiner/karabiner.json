{
  "global": { "show_in_menu_bar": false },
  "profiles": [
    {
      "complex_modifications": {
        "rules": [
          {
            "description": "Tap Caps Lock for ESC or Hold for Control",
            "manipulators": [
              {
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [
                  {
                    "key_code": "left_control",
                    "lazy": true
                  }
                ],
                "to_if_alone": [{ "key_code": "escape" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Left Command as F18 if pressed alone",
            "manipulators": [
              {
                "from": {
                  "key_code": "left_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": {
                  "key_code": "left_command",
                  "lazy": true
                },
                "to_if_alone": {
                  "key_code": "f18"
                },
                "type": "basic"
              }
            ]
          },
          {
            "description": "Messages: Remap Go to Next / Previous Conversations",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.apple\\.MobileSMS$"],
                    "type": "frontmost_application_if"
                  }
                ],
                "from": {
                  "key_code": "j",
                  "modifiers": { "mandatory": ["control"] }
                },
                "to": [
                  {
                    "key_code": "tab",
                    "modifiers": ["control"]
                  }
                ],
                "type": "basic"
              },
              {
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.apple\\.MobileSMS$"],
                    "type": "frontmost_application_if"
                  }
                ],
                "from": {
                  "key_code": "k",
                  "modifiers": { "mandatory": ["control"] }
                },
                "to": [
                  {
                    "key_code": "tab",
                    "modifiers": ["control", "shift"]
                  }
                ],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Map Left Command + Right Shift to F19",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "right_shift",
                  "modifiers": {
                    "mandatory": ["left_command"]
                  }
                },
                "to": [
                  {
                    "key_code": "f19"
                  }
                ]
              }
            ]
          }
        ]
      },
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
    }
  ]
}
