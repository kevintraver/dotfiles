{
  "editor.minimap.enabled": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "windsurf.autocompleteSpeed": "default",
  "windsurf.autoExecutionPolicy": "turbo",
  "windsurf.chatFontSize": "default",
  "windsurf.rememberLastModelSelection": true,
  "windsurf.openRecentConversation": true,
  "windsurf.explainAndFixInCurrentConversation": true,
  "windsurf.cascadeCommandsAllowList": [],
  "windsurf.cascadeOpenOnReload": true,
  "editor.formatOnSave": true,
  "git.autofetch": true,
  "scm.defaultViewMode": "tree",
  "files.dialog.defaultPath": "/Users/kevin/code",
  "gitlens.ai.model": "anthropic:claude-3-5-sonnet-latest",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.packageManager": "pnpm",
  "eslint.workingDirectories": ["apps", "packages"],
  "prettier.printWidth": 100,
  "prettier.arrowParens": "avoid",
  "prettier.enable": true,
  "prettier.endOfLine": "lf",
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "workbench.colorTheme": "Tokyo Night",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "window.newWindowDimensions": "maximized",
  "gitlens.ai.generateCommitMessage.customInstructions": "Generate a commit message using the Conventional Commits format",
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/.next": true,
    "**/pnpm-lock.yaml": true
  },
  "search.useGlobalIgnoreFiles": true,
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.terminalCommandSucceeded": {
    "sound": "off",
    "announcement": "off"
  },
  "terminal.integrated.enableVisualBell": false
}
