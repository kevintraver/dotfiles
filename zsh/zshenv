# Environment variables for all shell types (interactive and non-interactive)

# User scripts
export PATH="$HOME/.local/bin:$PATH"

# Bun
export PATH="$HOME/.bun/bin:$PATH"

# Rust/Cargo
export PATH="$HOME/.cargo/bin:$PATH"

# Go
export GOPATH="$HOME/.go"
export PATH="$HOME/.go/bin:$PATH"

# https://mise.jdx.dev/
# Using --shims for non-interactive shells (e.g., Claude Code) to access mise-managed tools
# Interactive shells get full hook support via zshrc
(( $+commands[mise] )) && eval "$(mise activate zsh --shims)"
